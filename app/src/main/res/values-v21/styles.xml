<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseThemeLight" parent="BaseThemeLight">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="CustomProgressBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/material_grey_600</item>
        <item name="android:progressBackgroundTint">@color/material_grey_50</item>
    </style>    
        
    <style name="CustomProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:theme">@style/CustomProgressBarTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:scaleY">3</item>
    </style>
    
</resources>
