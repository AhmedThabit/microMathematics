<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="@dimen/dialog_panel_vertical_padding"
        android:left="@dimen/dialog_panel_horizontal_padding"
        android:right="@dimen/dialog_panel_horizontal_padding"
        android:top="-10dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/dialog_panel_color" />

            <stroke
                android:width="1dp"
                android:color="@color/dialog_panel_stroke_color" >
            </stroke>

            <corners android:radius="@dimen/dialog_corner_radius" />
        </shape>
    </item>

</layer-list>