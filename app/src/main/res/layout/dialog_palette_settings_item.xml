<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <android.support.v7.widget.AppCompatCheckBox
            style="@style/CheckBoxStyle"
            android:id="@+id/dialog_palette_settings_checkbox"
            android:checked="false" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/dialog_palette_settings_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_palette_horizontal_padding"
                android:paddingRight="@dimen/activity_palette_horizontal_padding"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </LinearLayout>

</merge>