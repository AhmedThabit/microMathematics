<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dialog_content_padding"
        android:paddingTop="@dimen/dialog_content_padding" >

        <com.larswerkman.holocolorpicker.ColorPicker
            android:id="@+id/dialog_colorpicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                style="@style/DialogTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S:"/>
            <com.larswerkman.holocolorpicker.SaturationBar
                android:id="@+id/dialog_colorpicker_saturation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                style="@style/DialogTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L:"/>
            <com.larswerkman.holocolorpicker.ValueBar
                android:id="@+id/dialog_colorpicker_value_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                style="@style/DialogTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A:"/>
            <com.larswerkman.holocolorpicker.OpacityBar
                android:id="@+id/dialog_colorpicker_opacity_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</merge>