<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray-Indigo theme -->
    <style name="BaseThemeGrayIndigo" parent="AppBaseThemeLight">
        <!-- generated by Material Palette - materialpalette.com -->
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#536DFE</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="colorMicroMathIcon">#FFFFFF</item>
        <!-- Dialog style -->
        <item name="drawableDialogWindow">@drawable/dialog_window_gray</item>
        <item name="drawableDialogPanel">@drawable/dialog_panel_light</item>
        <item name="colorDialogTitle">#FFFFFF</item>
        <item name="colorDialogDivider">@color/material_grey_300</item>
        <item name="colorDialogContent">@android:color/black</item>
        <item name="colorDialogDisabledElement">@android:color/darker_gray</item>
        <item name="colorDialogEditText">@android:color/white</item>
        <item name="colorDialogHighlighted">#ffdddddd</item>
        <!-- Formula style -->
        <item name="colorFormulaBackground">@android:color/transparent</item>
        <item name="colorFormulaHighlighted">#ffdddddd</item>
        <item name="colorFormulaNormal">#212121</item>
        <item name="colorFormulaEmpty">#0288D1</item>
        <item name="colorFormulaInvalid">#ffff0000</item>
        <item name="colorFormulaSelected">#CFD8DC</item>
        <item name="colorFormulaCalculatedValue">#ff787878</item>
        <item name="colorFormulaTextFragment">#ff000066</item>
        <item name="colorPlotGridLine">#ff787878</item>
        <!-- Other elements -->
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <style name="MainThemeGrayIndigo" parent="BaseThemeGrayIndigo">
        <!-- No settings -->
    </style>

    <style name="SettingsThemeGrayIndigo" parent="BaseThemeGrayIndigo">
        <!-- For preference activity, de-activate overlay -->
        <item name="windowActionModeOverlay">false</item>
    </style>

</resources>