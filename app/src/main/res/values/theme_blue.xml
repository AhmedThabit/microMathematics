<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Blue application theme -->
    <style name="BaseThemeBlue" parent="AppBaseThemeLight">
        <!-- Basic style generated by Material Palette - materialpalette.com -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#ffff8000</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="colorMicroMathIcon">@android:color/white</item>
        <!-- Dialog style -->
        <item name="drawableDialogWindow">@drawable/dialog_window_light</item>
        <item name="drawableDialogPanel">@drawable/dialog_panel_light</item>
        <item name="colorDialogTitle">?attr/colorAccent</item>
        <item name="colorDialogContent">@android:color/black</item>
        <item name="colorDialogDisabledElement">@android:color/darker_gray</item>
        <item name="colorDialogEditText">@android:color/white</item>
        <item name="colorDialogHighlighted">#ffdddddd</item>
        <!-- Formula style -->
        <item name="colorFormulaBackground">@android:color/transparent</item>
        <item name="colorFormulaHighlighted">#ffdddddd</item>
        <item name="colorFormulaNormal">#212121</item>
        <item name="colorFormulaEmpty">#ffa0e2ef</item>
        <item name="colorFormulaInvalid">#ffff0000</item>
        <item name="colorFormulaSelected">#C5CAE9</item>
        <item name="colorFormulaCalculatedValue">#ff787878</item>
        <item name="colorFormulaTextFragment">#ff000066</item>
        <item name="colorPlotGridLine">#ff787878</item>
        <!-- Other elements -->
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <style name="MicroMathThemeBlue" parent="BaseThemeBlue">
        <!-- No settings -->
    </style>

    <style name="PreferenceScreenThemeBlue" parent="BaseThemeBlue">
        <!-- For preference activity, de-activate overlay -->
        <item name="windowActionModeOverlay">false</item>
    </style>

</resources>